<%- layout("/layouts/boilarplate.ejs") %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<body>
    <div class="row offset-sm-3 mt-5">
        <div class="col col-4">
            <form action="/contact" method="post" class="needs-validation" novalidate>
                <div class="mt-3" >
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Your Name" required>
                    <div class="valid-feedback">Good</div>
                    <div class="invalid-feedback">Enter your name</div>
                </div>
                <div class="mt-3">
                    <label for="msg" class="form-label">Message</label>
                    <textarea name="message" id="msg" cols="30" rows="5" class="form-control" placeholder="Enter your Message" required></textarea>
                    <div class="valid-feedback">Good</div>
                    <div class="invalid-feedback">Enter Message</div>
                </div>
                <button type="submit" class="btn btn-success mt-3">Send</button>
            </form>
        </div>

    </div>
</body>